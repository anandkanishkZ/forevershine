# Docker Environment Variables
# Copy this file to .env and fill in your values

# ======================================
# Database Configuration
# ======================================
POSTGRES_DB=forever_shine_db
POSTGRES_USER=forevershine
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ======================================
# JWT Secrets (Generate with: openssl rand -hex 64)
# ======================================
JWT_SECRET=GENERATE_RANDOM_SECRET_HERE
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=GENERATE_ANOTHER_RANDOM_SECRET_HERE
JWT_REFRESH_EXPIRES_IN=7d

# ======================================
# Admin Credentials
# ======================================
ADMIN_EMAIL=admin@forevershine.com.np
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# ======================================
# Application URLs
# ======================================
FRONTEND_URL=https://forevershine.com.np
NEXT_PUBLIC_API_URL=https://forevershine.com.np/api
NEXT_PUBLIC_SITE_URL=https://forevershine.com.np

# ======================================
# File Upload Configuration
# ======================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpeg,jpg,png,webp

# ======================================
# Rate Limiting
# ======================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
CONTACT_RATE_LIMIT_WINDOW_MS=3600000
CONTACT_RATE_LIMIT_MAX_SUBMISSIONS=3
UPLOAD_RATE_LIMIT_WINDOW_MS=900000
UPLOAD_RATE_LIMIT_MAX_UPLOADS=20
